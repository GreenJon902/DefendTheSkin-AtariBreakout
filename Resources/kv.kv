#: import configurables configurables

<MainMenuScreen>:
    id: MainMenuScreen

    Background:
        id: bg
        size_hint: 1, 1

    FloatLayout:
        pos_hint: {"x":0, "top": 1}
        Label:
            text: "Defend The Skin"
            font_name: configurables.bgFontName
            font_size: 50
            bold: True

            pos_hint: {"x":0, "top": 1.05}
            size_hint: 1, 0.2

        Button:
            id: PlayButton

            text: "Play"
            font_name: configurables.bgFontName
            font_size:40
            bold: True

            background_color: 0, 0, 0, 0

            pos_hint: configurables.playButtonPos
            size_hint: configurables.playButtonSize

            on_release: MainMenuScreen.start_game()

        BoxLayout:
            orientation: "vertical"
            padding: [10, 10]
            spacing: 10

            pos_hint: {"x": 0, "top": configurables.bgSkinBottom}
            size_hint: 1, 1-configurables.bgSkinBottom

            Image:
                id: HowToPlay

                size_hint: 1, 1
                source: "Resources/howToPlayButtonImage.png"


                canvas.before:
                    Color:
                        rgb: root.b1Color

                    Rectangle:
                        pos: self.pos
                        size: self.size

            Image:
                id: HowIsItRelatedToTheSkinImmuneSystem

                size_hint: 1, 1
                source: "Resources/howItsRelatedToTheSkinImmuneSystemButtonImage.png"


                canvas.before:
                    Color:
                        rgb: root.b2Color

                    Rectangle:
                        pos: self.pos
                        size: self.size

            Image:
                id: FurtherReading

                size_hint: 1, 1
                source: "Resources/furtherReadingButtonImage.png"


                canvas.before:
                    Color:
                        rgb: root.b3Color

                    Rectangle:
                        pos: self.pos
                        size: self.size

<PlayScreen>:
    id: PlayScreen

    Background:
        id: bg
        size_hint: 1, 1
        playing: True

    AtariBricks:
        id: AtariBricks

    Ball:
        id: Ball

    BigBrick:
        id: BigBrick
        size_hint: configurables.bigBrickWidth, configurables.bigBrickHeight
        pos_hint: {"center_x": 0.5, "y": configurables.bigBrickHeight * -1}

    Racket:
        id: Racket

    Health:
        id: Health

    FloatLayout:
        id: AntiBodiesHolder


<TextScreen>:
    ScrollView:
        size_hint: 1, 1
        do_scroll_x: False
        do_scroll_y: True

        Label:
            pos_hint: {"x":0, "y": 0}
            size_hint: 1, 2

            text: root.text
            font_name: configurables.TextFontName
            font_size: 20
            bold: True
            valign: "top"
            halign: "center"
            multiline: True
            text_size: self.width * 0.9, self.height





<ScoreScreen>:
    id: ScoreScreen

    Background:
        id: bg
        size_hint: 1, 1

    FloatLayout:
        pos_hint: {"x":0, "top": 1}
        Label:
            id: Title
            text: "You Loose!"
            font_name: configurables.bgFontName
            font_size: 50
            bold: True

            pos_hint: {"x":0, "top": 1.05}
            size_hint: 1, 0.2

        Label:
            id: Score

            text: "Your Score Is 0"
            font_name: configurables.bgFontName
            font_size:40
            bold: True

            pos_hint: configurables.playButtonPos
            size_hint: configurables.playButtonSize


        Button:
            id: PlayAgainButton

            text: "Click To Play Again"
            font_name: configurables.bgFontName
            font_size:40
            bold: True

            background_color: 0, 0, 0, 0

            pos_hint: {"x": 0, "y": 0}
            size_hint: 1, 1

            on_release: ScoreScreen.next()


<Racket>:
    pos_hint: {"y": configurables.racketY}
    on_size: self.center_x = self.parent.width / 2
    size_hint: configurables.racketSize

    canvas:
        Color:
            rgb: configurables.racketColor

        Rectangle:
            pos: self.pos
            size: self.size


<Ball>:
    y: configurables.ballY * self.parent.height
    center_x: self.parent.center_x

    size_hint: None, None

    canvas:
        Color:
            rgb: configurables.ballColor

        Rectangle:
            pos: self.pos
            size: self.size


<Health>:
    Image:
        id: heart_1
        source: "Resources/heart.png"
        allow_stretch: True

    Image:
        id: heart_2
        source: "Resources/heart.png"
        allow_stretch: True

    Image:
        id: heart_3
        source: "Resources/heart.png"
        allow_stretch: True
